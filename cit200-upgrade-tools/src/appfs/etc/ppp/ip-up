#!/bin/sh

RESOLV=/etc/resolv.conf

if ! grep 'gprs-dns' $RESOLV > /dev/null; then
	mv $RESOLV $RESOLV.org
fi

echo "# gprs-dns - generated by /etc/ppp/ip-up" > $RESOLV

if test -n "$USEPEERDNS"; then
	if test -n "$DNS1"; then
		echo "nameserver $DNS1" >> $RESOLV
	fi
	if test -n "$DNS2"; then
		echo "nameserver $DNS2" >> $RESOLV
	fi
fi

